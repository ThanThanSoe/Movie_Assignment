<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_view"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="450dp"
                    android:id="@+id/poster"
                    android:src="@drawable/images"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_name"
                android:layout_below="@+id/card_view"
                android:text="Movie Name"
                android:textColor="@android:color/white"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/genre"
                android:text="Genre/connor.2hur 25sec"
                android:layout_below="@+id/movie_name"
                android:layout_marginLeft="120dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imdb"
                android:text="7.5"
                android:textColor="@android:color/white"
                android:layout_below="@id/genre"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imdb_label"
                android:text="IMDB"
                android:layout_below="@+id/imdb"
                android:layout_marginLeft="90dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rotten_tomato"
                android:text="79%"
                android:textColor="@android:color/white"
                android:layout_below="@id/genre"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rotten_tomato_label"
                android:text="Rottencentric"
                android:layout_below="@+id/rotten_tomato"
                android:layout_marginLeft="140dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meta_centric"
                android:text="98%"
                android:textColor="@android:color/white"
                android:layout_below="@id/genre"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="280dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meta_centric_label"
                android:text="metacentric"
                android:layout_below="@+id/meta_centric"
                android:layout_marginLeft="250dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_buy_ticket"
                android:text="Buy Tickets"
                android:layout_below="@+id/imdb_label"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttom"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image3"
                android:src="@drawable/ic_expand_more"
                android:layout_below="@id/btn_buy_ticket"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>