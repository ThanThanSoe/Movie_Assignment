<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:id="@+id/poster"
            android:src="@drawable/images"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_name"
        android:layout_below="@+id/card_view"
        android:text="Movie Name"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genre"
            android:text="Genre/connor.2hur 25sec"
            android:layout_below="@+id/movie_name"
            android:layout_marginLeft="120dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imdb"
            android:text="7.5"
            android:layout_below="@id/genre"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imdb_label"
            android:text="IMDB"
            android:layout_below="@+id/imdb"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rotten_tomato"
            android:text="79%"
            android:layout_below="@id/genre"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rotten_tomato_label"
            android:text="Rottencentric"
            android:layout_below="@+id/rotten_tomato"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meta_centric"
            android:text="98%"
            android:layout_below="@id/genre"
            android:layout_marginLeft="250dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meta_centric_label"
            android:text="metacentric"
            android:layout_below="@+id/meta_centric"
            android:layout_marginLeft="250dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_buy_ticket"
            android:text="Buy Tickets"
            android:layout_below="@+id/imdb_label"
            android:layout_marginLeft="150dp"/>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>